# Behindy Ops Environment Variables
# ===================================

# Frontend (Next.js)
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_AI_URL=https://yourdomain.com/ai
NEXT_PUBLIC_DEV_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_TOKEN_KEY=behindy_access_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=behindy_refresh_token
NEXT_PUBLIC_APP_NAME=Behindy
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database (PostgreSQL)
DB_USER=behindy
DB_PASS=your_secure_db_password
DB_NAME=behindy
DB_PORT=5432

# Cache (Redis)
REDIS_PASSWORD=your_secure_redis_password
REDIS_PORT=6379

# Backend (Spring Boot)
JWT_SECRET=your_jwt_secret_min_256_bits
JWT_ACCESS_VALIDITY=900000
JWT_REFRESH_VALIDITY=604800000
COOKIE_SECURE=true
COOKIE_SAME_SITE=Strict

# Encryption
FIELD_KEY=your_field_encryption_key_32_chars
TABLE_KEY=your_table_encryption_key_32_chars

# Seoul Metro API
SEOUL_METRO_API_KEY=your_seoul_metro_api_key
METRO_API_ENABLED=true
METRO_ENABLED_LINES=1,2,3,4,5,6,7,8,9
METRO_DAILY_LIMIT=1000

# AI Server
AI_SERVER_INTERNAL_API_KEY=your_internal_api_key
AI_SERVER_ENABLED=true
AI_STORY_GENERATION_ENABLED=true
AI_STORY_BATCH_SIZE=1
AI_STORY_TEST_INTERVAL=86400000
AI_STORY_MIN_PER_STATION=2

# LLM Server
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
CLAUDE_API_KEY=sk-ant-your-claude-api-key
CLAUDE_MODEL=claude-3-haiku-20240307
REQUEST_LIMIT_PER_HOUR=50
REQUEST_LIMIT_PER_DAY=500
USE_CACHE=true
CACHE_TTL=7200
LOG_LEVEL=INFO
